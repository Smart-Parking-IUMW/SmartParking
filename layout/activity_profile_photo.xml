<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePhoto">

    <ImageView
        android:id="@+id/homepage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="8dp"
        android:onClick="btn_homepage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/reservation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="4dp"
        android:onClick="btn_reservation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homepage"
        app:srcCompat="@drawable/reservation" />

    <ImageView
        android:id="@+id/scan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:onClick="btn_scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toEndOf="@+id/reservation"
        app:srcCompat="@drawable/scan" />

    <ImageView
        android:id="@+id/payment"
        android:layout_width="49dp"
        android:layout_height="52dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="14dp"
        android:onClick="btn_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/scan"
        app:srcCompat="@drawable/payment" />

    <ImageView
        android:id="@+id/profileicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="14dp"
        android:onClick="btn_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/payment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/payment"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:onClick="btn_homepage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/viewprofile"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="194dp"
        android:layout_marginLeft="194dp"
        android:layout_marginTop="16dp"
        android:onClick="btn_profile"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:text="SELECT THE PHOTO YOU WANT"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/photo1"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/photo1"
        android:layout_marginLeft="10dp"
        android:layout_width="130dp"
        android:layout_height="145dp"
        android:layout_marginBottom="248dp"
        android:background="@drawable/profile"
        android:onClick="btn_change"
        app:layout_constraintBottom_toTopOf="@+id/scan"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/photo2"
        android:layout_width="120dp"
        android:layout_height="145dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="250dp"
        android:onClick="btn_change"
        android:background="@drawable/p1"
        app:layout_constraintBottom_toTopOf="@+id/scan"
        app:layout_constraintStart_toEndOf="@+id/photo1" />

    <ImageButton
        android:id="@+id/photo3"
        android:layout_marginLeft="10dp"
        android:layout_width="125dp"
        android:layout_height="145dp"
        android:onClick="btn_change"
        android:layout_marginBottom="250dp"
        android:background="@drawable/p2"
        app:layout_constraintBottom_toTopOf="@+id/scan"
        app:layout_constraintStart_toEndOf="@+id/photo2" />

    <ImageButton
        android:id="@+id/photo4"
        android:layout_width="130dp"
        android:layout_marginLeft="10dp"
        android:layout_height="150dp"
        android:onClick="btn_change"
        android:background="@drawable/p3"
        app:layout_constraintBottom_toTopOf="@+id/scan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo1"
        app:layout_constraintVertical_bias="0.054" />

    <ImageButton
        android:id="@+id/photo5"
        android:layout_width="125dp"
        android:layout_marginLeft="10dp"
        android:layout_height="150dp"
        android:onClick="btn_change"
        android:background="@drawable/p4"
        app:layout_constraintBottom_toTopOf="@+id/scan"
        app:layout_constraintStart_toEndOf="@+id/photo1"
        app:layout_constraintTop_toBottomOf="@+id/photo2"
        app:layout_constraintVertical_bias="0.054" />

    <Button
        android:id="@+id/photo6"
        android:layout_marginLeft="10dp"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:onClick="btn_change"
        android:background="@drawable/p5"
        app:layout_constraintBottom_toTopOf="@+id/payment"
        app:layout_constraintStart_toEndOf="@+id/photo2"
        app:layout_constraintTop_toBottomOf="@+id/photo3"
        app:layout_constraintVertical_bias="0.054" />

</androidx.constraintlayout.widget.ConstraintLayout>